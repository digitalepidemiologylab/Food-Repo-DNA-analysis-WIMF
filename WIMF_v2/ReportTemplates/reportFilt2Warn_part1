  new Chart(document.getElementById("bar-chart-horizontal"), {
    type: 'horizontalBar',
    data: {
      labels: [SPECIES_NAMES],
      datasets: [
        {
          label: "% of reads: ",
          backgroundColor: [COLOR_TABLE],
          data: [SPECIES_PERC]
        }
      ]
    },
    options: {
      scales: {
        yAxes: [{
            barPercentage: 1.0,
            categoryPercentage: 1.0,
            ticks: {
                fontSize: 24,
                fontStyle: "italic"
            }
        }],
        xAxes: [{
             display: true,
          ticks: {
            beginAtZero: true,
            fontSize: 24
          },
        }]},
      legend: { display: false },
    }
});


